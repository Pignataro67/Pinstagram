<h1>Hello, <%= current_user.username %></h1>

<h2>Recent Posts</h2>
<div class="container-fluid bg-3 text-center">
<% @posts.each do |post| %>
  <div class="row">
<div class="col-sm-3">
      <a href="/users/<%= post.user.id %>"><%= post.user.username%></a><br>
      <img src="/images/post/<%= post.post_photo%>" style="width:33%"><br>
      <a href="/posts/<%= post.id%>"><%= post.caption %></a><br><br>
    </div>
  </div>
  <% end %>	    
</div><br>